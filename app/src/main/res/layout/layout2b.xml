            android:background="@drawable/border2"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pic1" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/border2"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/pic1" />
